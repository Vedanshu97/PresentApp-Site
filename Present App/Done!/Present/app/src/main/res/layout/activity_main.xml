<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vedanshudahiya.present.MainActivity"
    android:background="#ffc8e1fa"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_marginTop="40dp"
        android:text="@string/Title"
        android:textStyle="bold|italic"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="#ff6464ff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Subtitle"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:textColor="#ffff1b06" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Attendance"
            android:id="@+id/textView3"
            android:padding="15dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/setup"
            android:clickable="true"
            android:onClick="goToAttendance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Time - Table"
            android:id="@+id/textView4"
            android:padding="15dp"
            android:textSize="25dp"
            android:singleLine="false"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textColor="@drawable/setup"
            android:onClick="goToTimeTable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="How To ?"
            android:id="@+id/textView5"
            android:padding="15dp"
            android:textSize="25dp"
            android:singleLine="false"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textColor="@drawable/setup"
            android:onClick="goToHowTo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Exit"
            android:id="@+id/textView6"
            android:padding="15dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textColor="@drawable/setup"
            android:onClick="goodbye" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Footer"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

</RelativeLayout>
